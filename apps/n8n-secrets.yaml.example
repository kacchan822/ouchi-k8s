apiVersion: v1
kind: Secret
metadata:
  # This secret should be created in the same namespace where you deploy n8n.
  # In the corresponding n8n.yaml, we are using the 'n8n' namespace.
  name: n8n-secrets
  namespace: n8n
type: Opaque
stringData:
  # Replace this with a 32 or 64-character alphanumeric string for the encryption key.
  # For example, you can generate one with: openssl rand -hex 16
  N8N_ENCRYPTION_KEY: "CHANGE_ME_PLEASE_WITH_A_32_CHAR_KEY"
