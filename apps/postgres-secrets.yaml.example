apiVersion: v1
kind: Secret
metadata:
  # This secret should be created in the 'n8n' namespace, where both
  # PostgreSQL and n8n will be deployed.
  name: postgres-secrets
  namespace: n8n
type: Opaque
stringData:
  # Provide a strong password here for both keys.
  # The two keys are required because the PostgreSQL chart and the n8n chart
  # expect different key names for the same password.
  #
  # You can generate a password with: openssl rand -base64 24

  # Key for the Bitnami PostgreSQL chart
  postgres-password: "CHANGE_ME_PLEASE"
  # Key for the n8n chart's external database connection
  postgresql-password: "CHANGE_ME_PLEASE"
